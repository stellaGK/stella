 
! Simple nonlinear example using CBC

&physics_flags
  adiabatic_option = 'iphi00=2'
  full_flux_surface = .false.
  include_apar = .false.
  nonlinear = .true.
  include_parallel_streaming = .false.
  include_mirror = .true.
/
&species_knobs
  nspec = 2
  species_option = 'stella'
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/
&parameters
  beta = 0.01
  rhostar = 0.01
  vnew_ref = 0.01
  zeff = 1.0
/
&kt_grids_box_parameters
  jtwist = 5
  nx = 6
  ny = 9
  y0 = 15
/
&zgrid_parameters
  boundary_option = 'linked'
  nperiod = 1
  nzed = 12
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3 
  vpa_max = 3.0
/
&knobs
  lu_option = 'local'
  avail_cpu_time = 82800
  delt = 0.01 
  fphi = 1.0
  mat_gen = .false.
  nstep = 100
  print_extra_info_to_terminal = .false. 
  rng_seed = 1
  stream_implicit = .true.
  mirror_implicit = .false.
  drifts_implicit = .false.
/
&stella_diagnostics_knobs
  nsave = 100
  nwrite = 10
/
&init_g_knobs
  chop_side = .false.
  ginit_option = 'default'
  phiinit = 0.01
  restart_dir = 'restart'
  restart_file = 'nc/example.nc'
  width0 = 1.0
/
&dissipation
  hyper_dissipation = .false.
/
&geo_knobs
  geo_option = 'miller'
/
&kt_grids_knobs
  grid_option = 'box'
/
&time_advance_knobs
  xdriftknob = 0
  ydriftknob = 0
  wstarknob = 0
  explicit_option = 'rk2'
/
&layouts_knobs
  vms_layout = 'vms'
  xyzs_layout = 'yxzs'
/
&millergeo_parameters
  nzed_local = 128
  rhoc = 0.5
  shat = 0.796
  qinp = 1.4
  rmaj = 2.77778
  rgeo = 2.77778
  shift = 0.0
  kappa = 1.0
  kapprim = 0.0
  tri = 0.0
  triprim = 0.0
  betaprim = 0.0
  d2qdr2 = 0.0
  d2psidr2 = 0.0
  betadbprim = 0.0
/ 
