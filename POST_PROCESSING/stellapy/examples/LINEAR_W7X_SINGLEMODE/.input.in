













&geometry_options
  geometry_option = 'vmec'
/

&geometry_vmec
  nfield_periods = 17
  torflux = 0.49
  vmec_filename = 'wout_w7x_standardConfig.nc'
/





&gyrokinetic_terms
  include_nonlinear = .false.
/





&diagnostics
  nsave = 100
  nwrite = 10
  save_for_restart = .false.
  write_all_time_traces = .true.
  write_all_spectra_kxkyz = .true.
  write_all_spectra_kxky = .true.
  write_all_velocity_space = .true.
  write_all_potential = .true.
  write_all_omega = .true.
  write_all_distribution = .true.
  write_all_fluxes = .true.
/





&initialise_distribution
  initialise_distribution_option = 'default'
  phiinit = 0.001
/

&initialise_distribution_maxwellian
  width0 = 1.0
/





&species_options
  nspec = 2
/

&species_parameters_1
  z = 1.0
  mass = 1.0
  dens = 1.0
  temp = 1.0
  fprim = 1.0
  tprim = 3.0
  type = 'ion'
/

&species_parameters_2
  z = -1.0
  mass = 0.00027
  dens = 1.0
  temp = 1.0
  fprim = 1.0
  tprim = 3.0
  type = 'electron'
/






&kxky_grid_option
  grid_option = 'range'
/

&kxky_grid_range
  aky_max = 0.5
  aky_min = 0.5
  nakx = 1
  naky = 1
/

&z_grid
  nperiod = 1
  nzed = 24
  zed_equal_arc = .true.
/

&velocity_grids
  nmu = 6
  nvgrid = 12
/






&time_trace_options
  tend = 100
/

&time_step
  delt = 0.1
/






&dissipation_and_collisions_options
  hyper_dissipation = .false.
  include_collisions = .false.
/





&parallelisation
  lu_option = 'local'
/

