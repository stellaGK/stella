
!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geometry_options
  geometry_option = 'miller'
/
&geometry_miller
  betadbprim = 0.0
  betaprim = 0.0
  d2psidr2 = 0.0
  d2qdr2 = 0.0
  kappa = 1.0
  kapprim = 0.0
  nzed_local = 128
  qinp = 1.4
  rgeo = 2.77778
  rhoc = 0.5
  rmaj = 2.77778
  shat = 0.796
  shift = 0.0
  tri = 0.0
  triprim = 0.0
/

!===============================================================================
!                                    Physics                                    
!===============================================================================

&adiabatic_electron_response
  adiabatic_option = 'field-line-average-term'
/

&gyrokinetic_terms
  simulation_domain = 'full_flux_annulus'
  include_parallel_streaming = .true.
  include_mirror = .false.
  include_xdrift = .false.
  include_ydrift = .false.
  include_drive = .false.
  include_nonlinear = .false.
  include_parallel_nonlinearity = .false.
  include_electromagnetic = .false.
/

&physics_inputs
  rhostar = 0.02
/

&flux_annulus
  nitt = 5
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_options
  nspec = 1
/
&species_parameters_1
  dens = 1.0
  fprim = 0.8
  mass = 1.0
  temp = 1.0
  tprim = 2.49
  type = 'ion'
  z = 1.0
/


!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'box'
/
&kxky_grid_box
  nx = 4
  ny = 6
/
&z_grid
  nzed = 24
  zed_equal_arc = .true.
/
&z_boundary_condition
  boundary_option = 'stellarator'
  shat_zero = 1e-06
/
&velocity_grids
  nmu = 4
  nvgrid = 6
  vpa_max = 3.0
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&diagnostics
  nsave = 10
  nwrite = 1
/

!===============================================================================
!                              Initialise potential                             
!===============================================================================

&initialise_distribution
  initialise_distribution_option = 'default'
  phiinit = 0.1
/
&initialise_distribution_maxwellian
  width0 = 1.0
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 10
/

&time_step
  delt = 0.1
/

&numerical_algorithms
  explicit_algorithm = 'rk3'
  mirror_semi_lagrange = .false.
  stream_implicit = .true.
  mirror_implicit = .false.
/

&debug_flags
  print_extra_info_to_terminal = .false.
/

&numerical_upwinding_for_derivatives
  time_upwind = 1.0
  vpa_upwind = 0.0
  zed_upwind = 0.0
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .false.
/

