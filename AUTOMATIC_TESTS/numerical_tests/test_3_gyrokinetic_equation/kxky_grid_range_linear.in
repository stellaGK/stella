

! Simple linear example based on JET shot 92174

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'miller'
/
&millergeo_parameters
  betadbprim = 0.0
  betaprim = 0.058
  d2psidr2 = 0.0
  d2qdr2 = 0.0
  kappa = 1.5504
  kapprim = 0.94963
  nzed_local = 128
  qinp = 5.0848
  rgeo = 3.1191
  rhoc = 0.97427 
  rmaj = 3.134
  shat = 3.3594
  shift = -0.34508
  tri = 0.26253
  triprim = 0.7368
/

!===============================================================================
!                                    Physics                                    
!===============================================================================

&parameters_physics
  nonlinear = .false.
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_knobs
  nspec = 2 
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kt_grids_knobs
  grid_option = 'range'
/
&kt_grids_range_parameters
  akx_max = 0.5
  akx_min = -0.5
  aky_max = 1.5
  aky_min = 0.5
  nakx = 3
  naky = 3
/
&zgrid_parameters
  boundary_option = 'linked'
  nperiod = 1
  nzed = 24
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 10
  nwrite = 1
/

!===============================================================================
!                              Initialize potential                             
!===============================================================================

&initialize_distribution
  initialize_distribution_option = 'default'
  phiinit = 0.01
/

&initialize_distribution_maxwellian
  width0 = 1.0
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&parameters_numerical
  delt = 0.01
  explicit_option = 'rk2'
  nstep = 10
  print_extra_info_to_terminal = .false.
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================
 
&dissipation
  hyper_dissipation = .true.
/

