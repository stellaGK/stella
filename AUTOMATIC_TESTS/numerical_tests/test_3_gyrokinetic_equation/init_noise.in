 
! Simple linear example using CBC to test that without any gyrokinetic
! terms and without dissipation, the potential does not evolve in time.
! Using the <ginit_option> = 'noise' initialization, and rng_seed = 1
! We need to set nonlinear = .true. or 'noise' will be changed to 'default'

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'miller'
/
&millergeo_parameters
  nzed_local = 128
  rhoc = 0.5
  shat = 0.796
  qinp = 1.4
  rmaj = 2.77778
  rgeo = 2.77778
  shift = 0.0
  kappa = 1.0
  kapprim = 0.0
  tri = 0.0
  triprim = 0.0
  betaprim = 0.0
  d2qdr2 = 0.0
  d2psidr2 = 0.0
  betadbprim = 0.0
/ 

!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_parallel_streaming = .false.
  include_mirror = .false.
  include_xdrift = .false.
  include_ydrift = .false.
  include_drive = .false.
  include_nonlinear = .true.
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_knobs
  nspec = 2
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kt_grids_knobs
  grid_option = 'box'
/
&parameters_kxky_grids_box 
  nx = 6
  ny = 9
  y0 = 15
/
&zgrid_parameters
  boundary_option = 'linked'
  nperiod = 1
  nzed = 12
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3 
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 1
  nwrite = 1
/

!===============================================================================
!                              Initialize potential                             
!===============================================================================

&initialise_distribution
  initialise_distribution_option = 'noise'
  phiinit = 0.01
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&parameters_numerical
  delt = 0.01
  nstep = 1
  rng_seed = 1
  print_extra_info_to_terminal = .false.
  stream_implicit = .true.
  mirror_implicit = .true.
  drifts_implicit = .false.
  explicit_option = 'rk2'
/

