 
! Simple linear example based on JET shot 92174
! Only simulate a single mode to make a quick test

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'miller'
/
&millergeo_parameters
  betadbprim = 0.0
  betaprim = 0.058
  d2psidr2 = 0.0
  d2qdr2 = 0.0
  kappa = 1.5504
  kapprim = 0.94963
  nzed_local = 128
  qinp = 5.0848
  rgeo = 3.1191
  rhoc = 0.97427 
  rmaj = 3.134
  shat = 3.3594
  shift = -0.34508
  tri = 0.26253
  triprim = 0.7368
/ 

!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_nonlinear = .false.
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_knobs
  nspec = 1
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'range'
/
&kxky_grid_range
  akx_max = 0.0
  akx_min = 0.0
  aky_max = 1.5
  aky_min = 1.5
  nakx = 1
  naky = 1
/
&zgrid_parameters
  boundary_option = 'linked'
  nperiod = 1
  nzed = 24
  zed_equal_arc = .false.
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 2
  nwrite = 1
/

!===============================================================================
!                              Initialize potential                             
!===============================================================================

&initialize_distribution
  initialize_distribution_option = 'default'
  phiinit = 0.01
/

&initialize_distribution_maxwellian
  width0 = 1.0
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 2
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk2'
/

&numerical_extra 
  print_extra_info_to_terminal = .false.
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .true.
/
