
! Simple linear example with z-pinch magnetic equilibrium geometry

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'zpinch'
/


!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_nonlinear = .true.
/

! Not used, but the test will check its value
&electromagnetic
  beta = 0.01
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_knobs
  nspec = 2
  species_option = 'stella'
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

 
!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'box'
/
&kxky_grid_box
  nx = 6
  ny = 9
  y0 = 5.0
  x0 = 5.0
/
&z_grid
  nzed = 4
/
&z_boundary_condition
  boundary_option = 'periodic'
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3 
  vpa_max = 3.0
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 10
  nwrite = 1
  save_for_restart = .false.
  write_fluxes_kxkyz = .true.
  write_gvmus = .true.
  write_gzvs = .true.
  write_kspectra = .true.
  write_omega = .true.
  write_phi_vs_time = .true.
  write_radial_fluxes = .true.
  write_radial_moments = .true.
/

!===============================================================================
!                              Initialize potential                             
!===============================================================================

&initialize_distribution
  initialize_distribution_option = 'default'
  phiinit = 0.01
/

&initialize_distribution_maxwellian
  width0 = 1.0
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 10
  avail_cpu_time = 82800
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk2'
/

&numerical_extra
  lu_option = 'local'
  print_extra_info_to_terminal = .false.
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .true.
/
