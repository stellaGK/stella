 
! Simple linear example based on a VMEC equillibrium at rho=0.7 using stellarator symmetric boundary conditions
! We use nfield_periods = 6.073867 to ensure that dkx = dky when using stellarator symmetric boundary conditions
! Only simulate a single mode to make a quick test

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'vmec'
/
&vmec_parameters
  nfield_periods = 6.073867
  torflux = 0.49
  vmec_filename = 'wout_w7x_kjm.nc'
/

!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_nonlinear = .false.
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_knobs
  nspec = 1
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kt_grids_knobs
  grid_option = 'range'
/
&kt_grids_range_parameters
  akx_max = 0.0
  akx_min = 0.0
  aky_max = 1.5
  aky_min = 1.5
  nakx = 1
  naky = 1
/
&zgrid_parameters
  boundary_option = 'stellarator'
  nperiod = 1
  nzed = 24
  zed_equal_arc = .true.
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3 
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 2
  nwrite = 1
/

!===============================================================================
!                              Initialize potential                             
!===============================================================================

&initialize_distribution
  initialize_distribution_option = 'default'
  phiinit = 0.01
/

&initialize_distribution_maxwellian
  width0 = 1.0
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 2
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk2'
/

&numerical_extra 
  print_extra_info_to_terminal = .false.
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .true.
/

