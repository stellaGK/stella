 
! Simple linear example based on a VMEC equillibrium at rho=0.7 using stellarator symmetric boundary conditions
! We use nfield_periods = 6.073867 to ensure that dkx = dky when using stellarator symmetric boundary conditions

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'vmec'
/
&vmec_parameters
  nfield_periods = 6.073867
  torflux = 0.49
  vmec_filename = 'wout_w7x_kjm.nc'
/

!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_nonlinear = .true.
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_options
  nspec = 2
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'box'
/
&kxky_grid_box
  jtwist = 5
  nx = 6
  ny = 9
  y0 = 15
/
&z_grid
  nzed = 24
/
&z_boundary_condition
  boundary_option = 'stellarator'
/
&velocity_grids
  nmu = 2 
  nvgrid = 3 
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 10
  nwrite = 1
/

!===============================================================================
!                              Initialize potential                             
!===============================================================================

&initialize_distribution
  initialize_distribution_option = 'default'
  phiinit = 0.01
/

&initialize_distribution_maxwellian
  width0 = 1.0
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 10
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk2'
/

&numerical_extra
  print_extra_info_to_terminal = .false.
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .true.
/

