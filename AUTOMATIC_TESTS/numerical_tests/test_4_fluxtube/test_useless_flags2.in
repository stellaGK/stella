
! Simple nonlinear example based on a VMEC equillibrium at rho=0.7 
! Use this to test which flags are useless. Toggle certain flags or
! change certain variables to see if it changes the output at all.

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geometry_options
  geometry_option = 'vmec'
/
&geometry_vmec
  nfield_periods = 6.073867
  surface_option = 0
  torflux = 0.49
  verbose = .true.
  vmec_filename = 'wout_w7x_kjm.nc'
  zeta_center = 0.0
/

!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_nonlinear = .true.
/
&electromagnetic
  beta = 999
/
&flux_annulus
  rhostar = 999
/
&extra
  zeff = 999
  vnew_ref = 999
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_options
  nspec = 2 
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'box'
/
&kxky_grid_box
  nx = 6
  ny = 9
  y0 = 15
/
&z_grid
  nzed = 12
/
&z_boundary_condition
  boundary_option = 'stellarator'
/
&velocity_grids
  nmu = 2 
  nvgrid = 3
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&diagnostics
  nsave = 10
  nwrite = 1
/

!===============================================================================
!                              Initialise potential                             
!===============================================================================

&initialise_distribution
  initialise_distribution_option = 'noise'
  phiinit = 0.01
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 10
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk2'
/

&numerical_extra
  print_extra_info_to_terminal = .false.
  rng_seed = 1
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .true.
/



