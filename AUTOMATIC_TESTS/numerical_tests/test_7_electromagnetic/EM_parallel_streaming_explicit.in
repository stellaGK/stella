 
! Simple linear example using CBC, including only the explicit parallel streaming term

&physics_flags
  nonlinear = .false.
  include_parallel_streaming = .true.
  include_mirror = .false.
  include_apar = .true.
  include_bpar = .true.
/
&parameters
  zeff = 1.0
  beta = 0.04
  vnew_ref = 0.01
  rhostar = 0.01
/
&species_knobs
  nspec = 2
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/
&kt_grids_box_parameters
  nx = 6
  ny = 9
  y0 = 15
/
&zgrid_parameters
  boundary_option = 'linked'
  nperiod = 1
  nzed = 12
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3 
/
&knobs
  delt = 0.001 
  nstep = 100
  mirror_semi_lagrange = .false.
!  print_extra_info_to_terminal = .false.
  stream_implicit = .false.
  mirror_implicit = .false.
  drifts_implicit = .false.
/
&stella_diagnostics_knobs
  nsave = 100
  nwrite = 10 
/
&init_g_knobs
  ginit_option = 'default'
  phiinit = 0.01
  width0 = 1.0
/
&dissipation
  hyper_dissipation = .false.
/
&geo_knobs
  geo_option = 'miller'
/
&kt_grids_knobs
  grid_option = 'box'
/
&time_advance_knobs
  xdriftknob = 0
  ydriftknob = 0
  wstarknob = 0
  explicit_option = 'rk3'
/
&millergeo_parameters
  nzed_local = 128
  rhoc = 0.5
  shat = 0.796
  qinp = 1.4
  rmaj = 2.77778
  rgeo = 2.77778
  shift = 0.0
  kappa = 1.0
  kapprim = 0.0
  tri = 0.0
  triprim = 0.0
  betaprim = 0.0
  d2qdr2 = 0.0
  d2psidr2 = 0.0
  betadbprim = 0.0
/ 
