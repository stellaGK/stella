 
! Simple nonlinear example using CBC, only including the explicit magnetic drifts

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'miller'
/
&millergeo_parameters
  nzed_local = 128
  rhoc = 0.5
  shat = 0.796
  qinp = 1.4
  rmaj = 2.77778
  rgeo = 2.77778
  shift = 0.0
  kappa = 1.0
  kapprim = 0.0
  tri = 0.0
  triprim = 0.0
  betaprim = 0.0
  d2qdr2 = 0.0
  d2psidr2 = 0.0
  betadbprim = 0.0
/

!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_parallel_streaming = .false.
  include_mirror = .false.
  include_xdrift = .true.
  include_ydrift = .true.
  include_drive = .false.
  include_nonlinear = .false.
  include_parallel_nonlinearity = .false.
  include_electromagnetic = .true.
/

&electromagnetic
  include_apar = .true.
  include_bpar = .true.
  beta = 0.0
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_knobs
  nspec = 2
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'box'
/
&kxky_grid_box
  nx = 6
  ny = 9
  y0 = 15
/
&z_grid
  nzed = 12
  nperiod = 1
/
&z_boundary_condition
  boundary_option = 'linked'
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3 
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 100
  nwrite = 10
/

!===============================================================================
!                              Initialise potential                             
!===============================================================================

&initialise_distribution
  initialise_distribution_option = 'default'
  phiinit = 0.01
/
&initialise_distribution_maxwellian
  width0 = 1.0
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 100
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk3'
  mirror_semi_lagrange = .false.
  stream_implicit = .false.
  mirror_implicit = .false.
  drifts_implicit = .false.
/

&numerical_extra
  print_extra_info_to_terminal = .false.
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .false.
/
