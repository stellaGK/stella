
! Simple nonlinear example based on CBC
! Turned on all the diagnostics

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geo_knobs
  geo_option = 'miller'
/
&millergeo_parameters
  nzed_local = 128
  rhoc = 0.5
  shat = 0.796
  qinp = 1.4
  rmaj = 2.77778
  rgeo = 2.77778
  shift = 0.0
  kappa = 1.0
  kapprim = 0.0
  tri = 0.0
  triprim = 0.0
  betaprim = 0.0
  d2qdr2 = 0.0
  d2psidr2 = 0.0
  betadbprim = 0.0
/

!===============================================================================
!                                    Physics                                    
!===============================================================================

&gyrokinetic_terms
  include_nonlinear = .true.
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_options
  nspec = 2 
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'box'
/
&kxky_grid_box
  jtwist = 5
  nx = 6
  ny = 9
  y0 = 15
/
&z_grid
  nzed = 24
/
&z_boundary_condition
  boundary_option = 'linked'
/
&vpamu_grids_parameters
  nmu = 2
  nvgrid = 3
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&stella_diagnostics_knobs
  nsave = 100
  nwrite = 10 
  write_all = .true.
  write_omega = .true.
  write_moments = .true.
  write_phi_vs_time = .true.
  write_apar_vs_time = .true.
  write_bpar_vs_time = .true.
  write_gvmus = .true.
  write_gzvs = .true.
  write_kspectra = .true.
  write_radial_fluxes = .true.
  write_radial_moments = .true.
  write_fluxes_kxkyz = .true.
/

!===============================================================================
!                              Initialise potential                             
!===============================================================================

&initialise_distribution
  initialise_distribution_option = 'noise'
  phiinit = 0.01
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 100
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk2'
/

&numerical_extra
  print_extra_info_to_terminal = .false.
  rng_seed = 1
/

&parameters_numerical
  delt = 0.01
  nstep = 100
  print_extra_info_to_terminal = .false.
  rng_seed = 1
  explicit_option = 'rk2'
/

!===============================================================================
!                                  Dissipation                                  
!===============================================================================

&dissipation
  hyper_dissipation = .true.
/

