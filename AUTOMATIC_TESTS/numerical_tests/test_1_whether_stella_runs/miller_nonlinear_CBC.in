 
! Simple nonlinear example using CBC

!===============================================================================
!                               Magnetic Geometry                               
!===============================================================================

&geometry_options
  geometry_option = 'miller'
/
&geometry_miller
  nzed_local = 128
  rhoc = 0.5
  shat = 0.796
  qinp = 1.4
  rmaj = 2.77778
  rgeo = 2.77778
  shift = 0.0
  kappa = 1.0
  kapprim = 0.0
  tri = 0.0
  triprim = 0.0
  betaprim = 0.0
  d2qdr2 = 0.0
  d2psidr2 = 0.0
  betadbprim = 0.0
/ 

!===============================================================================
!                                    Physics                                    
!===============================================================================
! Here we include apar and bpar to check whether their diagnostic are written.
!===============================================================================

&electromagnetic
  include_apar = .true.
  include_bpar = .true.
/

&gyrokinetic_terms
  include_nonlinear = .true.
/

!===============================================================================
!                                Kinetic species                                
!===============================================================================

&species_options
  nspec = 2
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/

!===============================================================================
!                       Discretized (kx,ky,z,mu,vpa) grid                       
!===============================================================================

&kxky_grid_option
  grid_option = 'box'
/
&kxky_grid_box
  jtwist = 5
  nx = 6
  ny = 9
  y0 = 15
/
&z_grid
  nzed = 12
/
&z_boundary_condition
  boundary_option = 'linked'
/
&velocity_grids
  nmu = 2
  nvgrid = 3
/

!===============================================================================
!                                  Diagnostics                                  
!===============================================================================

&diagnostics
  nsave = 10
  nwrite = 1
  write_all = .true.
/

!===============================================================================
!                              Initialize potential                             
!===============================================================================

&initialize_distribution
  initialize_distribution_option = 'noise'
  phiinit = 0.01 
/

!===============================================================================
!                                    Numerics                                   
!===============================================================================

&time_trace_options
  nstep = 10
/

&time_step
  delt = 0.01
/

&numerical_algorithms
  explicit_algorithm = 'rk2'
/

&numerical_extra
  print_extra_info_to_terminal = .false.
  rng_seed = 1
/
