 
! Simple nonlinear example using CBC

&parameters_physics
  adiabatic_option = 'iphi00=2'
  full_flux_surface = .false.
  include_apar = .true.
  include_bpar = .true.
  nonlinear = .true.
/
&species_knobs
  nspec = 2
  species_option = 'stella'
/
&species_parameters_1
  dens = 1.0
  fprim = 1.0
  mass = 1.0
  temp = 1.0
  tprim = 3.0
  type = 'ion'
  z = 1.0
/
&species_parameters_2
  dens = 1.0
  fprim = 1.0
  mass = 0.0005446
  temp = 1.0
  tprim = 3.0
  type = 'electron'
  z = -1.0
/
&parameters_kxky_grids_box
  jtwist = 5
  nx = 6
  ny = 9
  y0 = 15
/
&zgrid_parameters
  boundary_option = 'linked'
  nperiod = 1
  nzed = 12
/
&vpamu_grids_parameters
  nmu = 2 
  nvgrid = 3 
/
&parameters_numerical
  delt = 0.01 
  nstep = 10
  explicit_option = 'rk2'
  print_extra_info_to_terminal = .false.
/
&stella_diagnostics_knobs
  nsave = 10
  nwrite = 1
  save_for_restart = .false.
  write_all = .true.
/
&init_g_knobs
  ginit_option = 'noise'
  phiinit = 0.01
/
&dissipation
  hyper_dissipation = .true.
/
&geo_knobs
  geo_option = 'miller'
/
&kt_grids_knobs
  grid_option = 'box'
/
&layouts_knobs
  vms_layout = 'vms'
  xyzs_layout = 'yxzs'
/
&millergeo_parameters
  nzed_local = 128
  rhoc = 0.5
  shat = 0.796
  qinp = 1.4
  rmaj = 2.77778
  rgeo = 2.77778
  shift = 0.0
  kappa = 1.0
  kapprim = 0.0
  tri = 0.0
/ 
